FROM --platform=linux/x86_64 ruby:2.6.2-alpine

ENV LANG C.UTF-8
WORKDIR /app

ENV BUNDLE_JOBS=32 \
    BUNDLE_WITHOUT='production:staging'

ENV RUNTIME_PACKAGES="linux-headers git libxml2-dev make gcc libc-dev nodejs tzdata postgresql-dev postgresql" \
    DEV_PACKAGES="build-base curl-dev" \
    HOME="/app" \
    LANG=C.UTF-8 \
    TZ=Asia/Tokyo

RUN apk update && \
    apk upgrade && \
    apk add --update --no-cache ${RUNTIME_PACKAGES} && \
    apk add --update --virtual build-dependencies --no-cache ${DEV_PACKAGES} && \
    apk add curl && \
    apk del build-dependencies

# headless chrome install
RUN apk add --update \
    udev \
    ttf-freefont \
    chromium \
    chromium-chromedriver

COPY Gemfile Gemfile.lock /app/
RUN bundle install

COPY package.json yarn.lock /app/
RUN yarn install

COPY . /app

ENTRYPOINT [ "./entrypoint.sh" ]
